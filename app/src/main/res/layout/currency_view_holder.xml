<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currencyHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >


    <TextView
        android:id="@+id/currencyNominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="100"
        android:textColor="@color/blue"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"


        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyСharCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="AAA"
        android:textColor="@color/blue"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/currencyNominal"

        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/currencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="Название Валюты"
        android:textColor="@color/blue"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/currencyNominal"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/currencyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="00,00000"
        android:textColor="@color/blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@id/RUB"

        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/RUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/ic_baseline_currency_ruble_24"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>